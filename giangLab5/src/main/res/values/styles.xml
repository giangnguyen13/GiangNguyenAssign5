        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_text" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="input_label" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/light_gray</item>
