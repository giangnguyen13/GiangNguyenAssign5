<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_primary" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/fab_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mediun_text</item>
    </style>

    <style name="btn_info" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/info</item>
        <item name="android:textColor">@color/white</item>
